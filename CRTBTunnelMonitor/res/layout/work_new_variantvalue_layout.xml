<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/work_new_variant_value_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@null" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical"
            android:paddingBottom="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="拱顶下沉"
                android:textColor="#888888"
                android:textSize="18sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="累计变形极限值(毫米)"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null" >

                <ImageView
                    android:id="@+id/hint_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/x" />

                <EditText
                    android:id="@+id/vault_trans_max"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/hint_img"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:text="100" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="变形速率极限值(毫米/天)"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null" >

                <ImageView
                    android:id="@+id/hint_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/x" />

                <EditText
                    android:id="@+id/vault_trans_velocity"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/hint_img"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:text="5" />
            </RelativeLayout>

            <!-- 周边收敛 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="周边收敛"
                android:textColor="#888888"
                android:textSize="18sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="累计收敛极限值(毫米)"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null" >

                <ImageView
                    android:id="@+id/hint_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/x" />

                <EditText
                    android:id="@+id/circum_astringe_max"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/hint_img"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:text="100" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="收敛速率极限值(毫米/天)"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null" >

                <ImageView
                    android:id="@+id/hint_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/x" />

                <EditText
                    android:id="@+id/circum_astringe_velocity"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/hint_img"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:text="5" />
            </RelativeLayout>

            <!-- 地表下沉 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="地表下沉"
                android:textColor="#888888"
                android:textSize="18sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="累计变形极限值(毫米)"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null" >

                <ImageView
                    android:id="@+id/hint_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/x" />

                <EditText
                    android:id="@+id/surface_sink_max"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/hint_img"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:text="100" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="变形速率极限值(毫米/天)"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null" >

                <ImageView
                    android:id="@+id/hint_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/x" />

                <EditText
                    android:id="@+id/dibiao_velocity"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/hint_img"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:text="5" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="极限时间"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/circum_astringe_date"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginRight="30dp"
                    android:editable="false"
                    android:focusable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/circum_astringe_remark"
                    style="@style/crtb_input_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginRight="30dp"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    <ImageView
        android:id="@+id/notice"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/work_new_remark" />

    <TextView
        android:id="@+id/remark"
        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上述表中只列出了累计变形量的控制指标，关于速率的控制指标，详细内容请参考铁路总公司印发的《隧道围岩量测标准化管理实施意见》" />

</LinearLayout>