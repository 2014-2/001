<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:id="@+id/warning_title"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:background="#006d87"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/rizhi"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#006d87"
                android:text="Medium Text"
                android:textColor="#ccffffff"
                android:textSize="15sp"/>

        <TextView
                android:layout_weight="1"
                android:id="@+id/yixiaojing"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#006d87"
                android:text="Medium Text"
                android:gravity="center"
                android:textColor="#ccffffff"
                android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/rela"
            android:layout_below="@+id/warning_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ListView
                android:background="@color/white"
                android:id="@+id/listView12"
                android:divider="@color/black"
                android:dividerHeight="1px"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </ListView>

    </LinearLayout>

    <RelativeLayout
            android:visibility="gone"
            android:id="@+id/warning_menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true">
        <!-- 暂时把这几个设为gone -->
        <Button
                android:id="@+id/normal"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/discard_btn"
                android:layout_above="@+id/line1"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/normal_cal"
                android:textColor="@color/white"
                android:visibility="gone"
                />
        <View
                android:id="@+id/line1"
                android:background="#e0000000"
                android:layout_alignLeft="@+id/discard_btn"
                android:layout_above="@+id/discard_btn"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:visibility="gone"/>

        <Button
                android:id="@+id/discard_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#b0000000"
                android:layout_alignLeft="@+id/as_first_line"
                android:layout_above="@+id/line2"
                android:textSize="16sp"
                android:text="@string/discarded"
                android:textColor="@color/white"
                android:visibility="gone"/>
        <View
                android:id="@+id/line2"
                android:background="#e0000000"
                android:layout_alignLeft="@+id/as_first_line"
                android:layout_above="@+id/as_first_line"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:visibility="gone"/>
        <Button
                android:id="@+id/as_first_line"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/as_first_line"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        <View
                android:id="@+id/line3"
                android:background="#e0000000"
                android:layout_alignLeft="@+id/as_first_line"
                android:layout_below="@+id/as_first_line"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:visibility="gone"/>
        <Button
                android:id="@+id/correction"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@id/as_first_line"
                android:layout_below="@id/line3"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/add_correction"
                android:textColor="@color/white"
                />
        <View
                android:id="@+id/line4"
                android:background="#e0000000"
                android:layout_alignLeft="@id/as_first_line"
                android:layout_below="@id/correction"
                android:layout_width="120dp"
                android:layout_height="1dp"/>
        <Button
                android:id="@+id/rebury"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@id/as_first_line"
                android:layout_below="@id/line4"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/rebury"
                android:textColor="@color/white"
                />
        <View
                android:id="@+id/line5"
                android:background="#e0000000"
                android:layout_alignLeft="@id/as_first_line"
                android:layout_below="@id/rebury"
                android:layout_width="120dp"
                android:layout_height="1dp"/>
        <Button
                android:id="@+id/handling_detail"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@id/as_first_line"
                android:layout_below="@id/line5"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/handling_details"
                android:textColor="@color/white"/>
    </RelativeLayout>

    <include layout="@layout/warning_complete"/>

</RelativeLayout>