<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/top_bar"
        layout="@layout/activity_topbar_layout" />
    
    <LinearLayout
            android:id="@+id/warning_show_title"
            android:layout_below="@id/top_bar"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:background="#006d87"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/warning_show_rizhi"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#006d87"
                android:text="报警日志：(0)"
                android:textColor="#ccffffff"
                android:textSize="15sp"/>

        <TextView
                android:layout_weight="1"
                android:id="@+id/warning_show_yixiaojing"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#006d87"
                android:text="已消警：(0)"
                android:gravity="center"
                android:textColor="#ccffffff"
                android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/warning_show_rela"
            android:layout_below="@id/warning_show_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="60dp">

        <ListView
                android:background="@color/white"
                android:id="@+id/warning_show_listView"
                android:divider="@color/black"
                android:dividerHeight="1px"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </ListView>

    </LinearLayout>
    
     <RelativeLayout
            android:visibility="gone"
            android:id="@+id/warning_show_menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true">
        <!-- 暂时把这几个设为gone
        <Button
                android:id="@+id/normal"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/discard_btn"
                android:layout_above="@+id/line1"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/normal_cal"
                android:textColor="@color/white"
                android:visibility="gone"
                />
        <View
                android:id="@+id/line1"
                android:background="#e0000000"
                android:layout_alignLeft="@+id/discard_btn"
                android:layout_above="@+id/discard_btn"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:visibility="gone"/>

        <Button
                android:id="@+id/discard_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#b0000000"
                android:layout_alignLeft="@+id/as_first_line"
                android:layout_above="@+id/line2"
                android:textSize="16sp"
                android:text="@string/discarded"
                android:textColor="@color/white"
                android:visibility="gone"/>
        <View
                android:id="@+id/line2"
                android:background="#e0000000"
                android:layout_alignLeft="@+id/as_first_line"
                android:layout_above="@+id/as_first_line"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:visibility="gone"/>
        <Button
                android:id="@+id/as_first_line"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/as_first_line"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        <View
                android:id="@+id/line3"
                android:background="#e0000000"
                android:layout_alignLeft="@+id/as_first_line"
                android:layout_below="@+id/as_first_line"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:visibility="gone"/>
                 -->
        <Button
                android:id="@+id/warning_show_correction"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/add_correction"
                android:textColor="@color/white"
                />
        <!-- 
        <View
                android:id="@+id/line4"
                android:background="#e0000000"
                android:layout_alignLeft="@+id/rebury"
                android:layout_above="@+id/rebury"
                android:layout_width="120dp"
                android:layout_height="1dp"/>
        <Button
                android:id="@+id/rebury"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/rebury"
                android:textColor="@color/white"
                />
          -->
        <View
                android:id="@+id/warning_show_line5"
                android:background="#e0000000"
                android:layout_alignLeft="@id/warning_show_correction"
                android:layout_below="@id/warning_show_correction"
                android:layout_width="120dp"
                android:layout_height="1dp"/>
        <Button
                android:id="@+id/warning_show_handling_detail"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@id/warning_show_correction"
                android:layout_below="@id/warning_show_line5"
                android:background="#b0000000"
                android:textSize="16sp"
                android:text="@string/handling_details"
                android:textColor="@color/white"/>
    </RelativeLayout>

    <include layout="@layout/warning_complete"/>

    <LinearLayout
        android:id="@+id/test_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_button_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_test_selector"
        android:orientation="horizontal"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/test_bnt_left_section"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/button_test_selector" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arrow_pre" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="上一个断面"
                    android:textColor="#777777"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="2dip"
            android:layout_height="fill_parent"
            android:background="#c5c5c5" />

        <RelativeLayout
            android:id="@+id/test_bnt_next_section"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/button_test_selector" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="下一个断面"
                    android:textColor="#777777"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arrow_next" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>