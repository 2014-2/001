<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/activity_topbar_layout" />

    <TextView
        android:id="@+id/parameter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/parameter"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="用户登录"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />

    <TextView
        android:id="@+id/workinfo_download"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/workinfo_download"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="工点下载"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />

    <TextView
        android:id="@+id/data_upload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/upload"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="数据上传"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />

    <TextView
        android:id="@+id/warn_upload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/warn_upload"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="预警上传"
        android:textSize="19sp" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />
    
    <TextView
        android:id="@+id/section_stop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="5dip"
        android:drawableLeft="@drawable/section_stop"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:text="断面封存"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d0d0d0" />
   

</LinearLayout>